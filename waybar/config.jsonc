  },
  "cpu": {
    "format": " {icon} {usage}%",
    "format-icons": ["Ôíº"],
    "interval": 3,
    //"on-click-right": "gnome-system-monitor"
    "on-click-right": "$HOME/.local/kitty.app/bin/kitty /usr/bin/btop",
  },
  "battery": {
    "format": " {icon} {capacity}%",
    "format-alt": "{icon} {time}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "format-time": "{H}h{M}m",
    "format-charging": " Û±ä§ {capacity}%", // {time}",  //Ôá¶ Û±òñ Û∞ÇÑ
    "format-full": " Û∞Åπ FULL",
    "format-warning": "{warning-icon} {capacity}%",
    "format-critical": "{critical-icon} {capacity}%",
    // "format-plugged ": "{icon}",
    "interval": 30,
    "states": {
      "warning": 25,
      "critical": 10,
      "warning-icon": "ÔÅ±",
      "critical-icon": "Û∞öë", // Û∞ôª
    },
    "tooltip": false,
    "on-click": "2",
  },
  "temperature": {
