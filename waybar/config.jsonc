    "exec": "echo ; echo Û∞Öá clipboard history",
    "on-click": "sleep 0.1 && cliphist.sh c",
    "on-click-right": "sleep 0.1 && cliphist.sh d",
    "on-click-middle": "sleep 0.1 && cliphist.sh w",
    "interval": 86400, // once every day
    "tooltip": true,
  },
  // Audio and Brightness Configurations
  "pulseaudio": {
    "format": " {icon} {volume}",
    "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
    "format-bluetooth-muted": "{icon}Ôäî {format_source}",
    "format-muted": "Û∞ùü 00",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄß", "ÔÄ® "],
      "headset": ["ÔÄ• ÔÄ¶", "ÔÄ• ÔÄß", "ÔÄ• Ôö®", "ÔÄ• ÔÄ®"], // "ÔÄ• "
      "headphone": "Û∞ãé ",
      "hands-free": "Û∞•∞ ",
      "phone": "ÔÇï",
      "portable": "Û∞¶¢",
